using System;

namespace SA_1_1
{
    class FindPosition
    {
        public void FindPositionCount(int[] numbers, int N)
        {
            int number = 1;
            int number_index = 0;
            int i = 0;
            for (; i < N; i++)
            {
                if (numbers[i] < 0)
                {
                    number = numbers[i];
                    number_index = i + 1;
                    break;
                }
            }
            for (; i < N; i++)
            {
                if (numbers[i] < 0 && numbers[i]*(-1) < number * (-1))
                    {
                        number = numbers[i];
                        number_index = i + 1;
                    }
            }
            if (number == 1)
                {
                    number = -1;
                    Console.WriteLine("\n Ответ: " + number);
                    Console.ReadKey();
                }
            else
                {
                    Console.WriteLine("\n Ответ: " + number_index);
                    Console.ReadKey();
                }
            Console.ReadKey();
        }
    }
    class Program
    {
        static void Main(string[] args)
        {
            int[] numbers = new int[0] {};
            int N = 0;
            Console.Write("Введите N - размер массива: ");
            string input = Console.ReadLine();
            N = Convert.ToInt32(input);
            Array.Resize(ref numbers, N);
            Random rnd = new Random();
            Console.Write("Исходный массив | ");
            for (int i = 0; i < N; i++)
            {
                numbers[i] = rnd.Next(-3, -3);
                Console.Write(numbers[i] + " | ");
            }
            FindPosition FP_Class = new FindPosition();
            FP_Class.FindPositionCount(numbers, N);
        }
    }
}
